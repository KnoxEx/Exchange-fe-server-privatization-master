.tableList-container {
  .thead {
    height 29px
    line-height 29px
    border-bottom-width 1px
    border-bottom-style solid
    font-size 12px

    span {
      display inline-block
    }
  }

  .tbody {
    padding 5px 0 2px
    position relative
    font-size 12px
    transiton height 0.5s ease
    width 100%
    -webkit-transition height 0.5s ease
    margin-top -1px

    &.no-padding {
      padding 0
    }

    .symbol-item {
      padding 0 15px 0 0
      line-height 17px
      cursor pointer
      position relative

      .bg {
        display none
      }

      &.change-item {
        .change {
          position absolute
          animation 1s opacity2 0s 1
          top 0
          left 2px
          height 100%
          width 100%
          opacity 0
        }
      }

      &:hover {
        .bg {
          display block
          position absolute
          top 0
          left 0
          height 100%
          width 100%
        }
      }
    }
  }

  @keyframes opacity2 {
    0% {
      opacity 1
    }

    100% {
      opacity 0
    }
  }

  @keyframes opacity2 {
    0% {
      opacity 1
    }

    100% {
      opacity 0
    }
  }

  @keyframes opacity2 {
    0% {
      opacity 1
    }

    100% {
      opacity 0
    }
  }

  .asksOPtion {
    position absolute
    bottom 0
  }

  .thead, .tbody {
    span {
      display inline-block
      text-align right
      position relative
      z-index 9

      .icon {
        display inline-block
        vertical-align middle
        height 16px
        background #f00
        float left
        margin 8px 5px 0 0
      }

      .hover_show {
        display none
      }

      &:hover {
        .hover_show {
          display block
        }

        .hover_hide {
          display none
        }
      }
    }
  }

  .tr-bg {
    position absolute
    height 16px
    top 0
    left 6px
    z-index 1
    padding 0
    width 10%
    transiton width 0.5s ease
    -webkit-transition width 0.5s ease
  }
}

