.currentSymbol {
    height: 0.54rem;
    // overflow: hidden;
    position: relative;
    margin-top: 1px;
    .symbol-total {
      float: left;
      border-right-width: 1px;
      border-right-style: solid;
      padding: 0 0.15rem 0 0.15rem;
      margin-top: 0.1rem;
      line-height: 0.18rem;
      min-width: 0.3rem;
      span {
        vertical-align: middle;
      }
      .symbol-name {
        font-size: 18px;
      }
      .symbol-number {
        font-size: 16px;
        margin-left: 5px;
      }
      .symbol-property {
        font-size: 12px;
        display: block;
      }
    }
    .page-market-jz {
      display: none;
      position: absolute;
      top: 52px;
      width: 100%;
      padding: 20px;
      left: 0;
      // right: -5px;
      box-sizing: border-box;
      font-family: PingFangSC-Regular;
      font-size: 12px;
      letter-spacing: 0;
      line-height: 20px;
      z-index 99;
      text-align: left;
      box-shadow: 0 3px 4px 1px rgba(0,0,0,0.28);
    }
    .symbol-info {
      float: right;
      padding: 0.12rem 0.15rem 0 0;
      .info-item {
        float: left;
        margin-left: 0.2rem;
        font-size: 12px;
        text-align: right;
        &:hover {
          .page-market-jz {
            display: block;
          }
        }

      .jzTit {
        vertical-align: middle;
        .icon {
          font-size: 12px;
          cursor: pointer
        }
      }
        span  {
          display: block;

        }
        .vla {
          margin-top: 0.08rem;
        }
      }
    }
  }