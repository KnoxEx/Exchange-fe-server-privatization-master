.co-market-box {
  .main-market-container {
    height 72px
  }

  .main-market {
    height 72px
  }

  .market-item {
    width 165px
    height 72px
    user-select none
    float left
    border-right-width 1px
    border-right-style solid
    cursor pointer

    .symbol-scope {
      padding 18px 15px 0 15px
      line-height 14px

      .scope {
        float right
        font-size 12px
      }
    }

    .price {
      font-size 12px
      margin-top 12px
      padding-left 15px
    }
  }

  .sub-market {
    height 42px
    line-height 42px
    margin 1px 0 5px
    font-size 12px
    padding-left 15px

    .sub-tab {
      display inline-block
      user-select none
      cursor pointer
      margin-right 32px
      position relative

      .current-botton {
        position absolute
        bottom 0
        left 50%
        margin-left -20px
        width 40px
        height 2px
        display none
      }

      &.current {
        .current-botton {
          display block
        }
      }
    }

    .difference {
      float right
      margin-right 18px
    }
  }
}