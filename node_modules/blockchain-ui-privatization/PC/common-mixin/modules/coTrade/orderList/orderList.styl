.order-list-box {
    margin-top: 5px;
    .form-info {
      margin-bottom: 20px;
      .info-item {
        height: 50px;
        padding: 10px 20px;
        margin-bottom: 1px;
        .radio {
          line-height: 50px;
          span {
            margin-right: 36px;
            cursor: pointer;
          }
        }
        .text1 {
          font-size: 12px;
          margin-top: 6px;
          line-height: 22px;
        }
      }
    }
    .inline-input {
      padding: 0 10px;
      .input-line-slot {
        line-height: 26px;
      }
    }
    .table-body {
      min-height: 250px;
    }
  }
  .trade-content {
    .table-body .notShowe {
      display: none;
    }
    .table-body .marketPriceOrder {
     display: none;
    }
    .left-text {
      text-align: left;
    }
  }
  .tab-box {
    height: 39px;
    line-height: 39px;
    border-bottom-width: 1px;
    border-bottom-style: solid;
    padding: 0 15px;
    .tab-item {
      font-size: 14px;
      margin-right: 45px;
      display: inline-block;
      cursor: pointer;
      height: 37px;
      &.selected {
        border-bottom-style: solid;
        border-bottom-width: 2px;
      }
    }
  }
  .order-list {
    .common-table {
      min-width: 1200px;
      .hover {
        cursor: pointer;
        .hover_show {
          display: none;
        }
        &:hover {
          .hover_show {
            display: block;
          }
          .hover_hide {
            display: none;
          }
        }
      }
      .ctimeStr {
        width: 100px;
        display: block;
      }
      .pcInputHtml {
        display:inline-block;
      }
      .pcInput {
        border-width: 1px;
        border-style: solid;
        width: 85px;
        padding-left: 10px;
        height: 28px;
        border-radius: 3px;
      }
      .table-body td .button {
        margin: 0 -10px 0 5px;
      }
    }
  }
  .opera {
    div {
      padding-right: 10px;
    }
  }
  // 分仓样式
  .fc-order-list-box {
    .common-table {
      min-width: 1500px;
    }
    .table-head {
      th:nth-child(2) {
        text-align: left;
      }
    }
    .bodyContent0{
      td:nth-child(2) {
        text-align: left;
        cursor: pointer;
      }
      td:last-child {
        min-width: 240px;
      }
      tr {
        cursor: pointer;
      }
    }
    .table-body {
      td:last-child {
        padding-right: 20px;
      }
      td:first-child {
        padding-left: 20px;
      }
    }
    .table-body .table-body-bar {
      padding: 0;
    }
  }
  // 国际版
  .Int-contract-content {
    .order-list-box {
      height: 400px;
      .order-conent {
        height: 315px;
        width: 100%;
      }
      .table-head {
        padding: 0 20px;
      }
    }
  }