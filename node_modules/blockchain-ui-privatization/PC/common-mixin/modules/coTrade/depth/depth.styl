.codepath-container {
  .coDepth {
    width 320px
    height 780px
    float left
    position relative
    overflow hidden
  }

  .block-header {
    height 39px
    line-height 38px
    padding 0 15px
    font-size 14px
    border-bottom-width 1px
    border-bottom-style solid
  }

  .tbody {
    padding 4px 0
  }

  .current-price {
    height 40px
    line-height 40px
    padding 0 15px
    font-size 12px
    margin-top 0

    .price-box {
      float left
      height 40px
      line-height 40px
      font-size 12px

      span {
        vertical-align middle
      }

      .price {
        margin-right 10px
      }
    }

    .jb {
      margin-left 10px
      display inline-block
      float right

      i {
        vertical-align middle
        display inline-block
        width 6px
        margin-right 3px
        height 14px
        border-width 1px
        border-style solid
        border-radius 2px
      }
    }
  }

  .switch-btn {
    float right
    display: none !important;
    .dtIcon {
      font-size 16px
      margin-left 5px
      cursor pointer
      display inline-block
      height 36px
      line-height 36px
      text-align center
      border-radius 50%
      width 36px
    }
  }

  .h4 {
    display inlin
  }

  .title-tab {
    margin-right 30px
    display none

    &.title-new-tab {
      display none
    }
  }
}

@media screen and (max-width: 1820px) {
  .codepath-container {
    .new-tradb {
      position absolute
      top 40px
      left 0
      transform translate(-100%, 0px)
      // left: -100%;
      will-change transform

      &.is-show {
        display block
        left 0
        transform translate(0px, 0px)
      }
    }

    .coDepth {
      .block-content {
        position absolute
        top 40px
        left 0
        transform translate(-100%, 0px)
        // left: -100%;
        will-change transform

        &.is-show {
          display block
          left 0
          transform translate(0px, 0px)
        }
      }
    }
  }
}

.trade-shrinks {
  .switch-btn {
    display: none !important;
    .dtIcon {
      width 25px;
      margin-left 0;
    }
  }
  .h4 {
    display none
  }

  .title-tab {
    margin-right 15px;
    padding 0 3px
    cursor pointer
    display inline-block

    &.title-new-tab {
      display inline-block
    }

    &:hover, &.selected {
      border-bottom-style solid
      border-bottom-width 2px
    }
  }

  .new-tradb {
    position absolute
    top 40px
    left 0
    transform translate(-100%, 0px)
    // left: -100%;
    transition transform 0.35s cubic-bezier(0.15, 0.3, 0.25, 1) 0s
    will-change transform

    &.is-show {
      display block
      left 0
      transform translate(0px, 0px)
    }
  }

  .coDepth {
    .block-content {
      position absolute
      top 40px
      left 0
      transform translate(-100%, 0px)
      // left: -100%;
      transition transform 0.35s cubic-bezier(0.15, 0.3, 0.25, 1) 0s
      will-change transform

      &.is-show {
        display block
        left 0
        transform translate(0px, 0px)
      }
    }
  }

  .new-tradb {
    // left: 100%;
    transform translate(100%, 0px)
  }
}

// 国际版
.Int-contract-content {
  .codepath-container {
    .coDepth, &.coDepth-block {
      height 100%
    }

    .block-content, .new-tradb {
      height calc(100% - 40px)
    }
  }
}